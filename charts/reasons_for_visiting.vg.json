{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": "container",
  "height": "container",
  "data": {
    "url": "../data/reasons_for_visiting_output.csv"
  },
  "config": {
    "background": null,
    "view": {
      "stroke": "transparent"
    },
    "font": "Public Sans"
  },
  "transform": [
    {
      "window": [
        {
          "op": "sum",
          "field": "count",
          "as": "total"
        }
      ],
      "frame": [null, null],
      "groupby": ["year"]
    },
    {
      "calculate": "datum.count/datum.total",
      "as": "percent"
    },
    {
      "window": [
        {
          "op": "max",
          "field": "percent",
          "as": "maxPercent"
        }
      ],
      "frame": [null, null],
      "groupby": ["reason"]
    }
  ],

  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "percent",
      "type": "quantitative",
      "title": "Percentage of yearly visitors",
      "axis": {
        "format": ".0%"
      }
    },

    "color": {
      "condition": {
        "param": "hover",
        "field": "reason",
        "type": "nominal",
        "sort": [
          "Business",
          "Convention/conference",
          "Education",
          "Employment",
          "Holiday",
          "Visiting friends/relatives",
          "Other"
        ],
        "legend": {
          "title": "Reason for visiting"
        },
        "scale": {
          "range": [
            "#c85200",
            "#Fc7d0b",
            "#ffbc79",
            "#1170aa",
            "#5fa2ce",
            "#a3cce9",
            "grey"
          ]
        }
      },
      "value": "grey"
    },
    "opacity": {
      "condition": { "param": "hover", "value": 1 },
      "value": 0.2
    }
  },

  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "bind": { "legend": "mouseover" },
          "select": {
            "type": "point",
            "fields": ["reason"],
            "on": "mouseover"
          }
        }
      ],
      "mark": { "type": "line", "strokeWidth": 16, "stroke": "transparent" }
    },
    {
      "mark": {
        "type": "line"
      },
      "encoding": {
        "x": { "field": "year", "type": "temporal" },
        "y": { "field": "percent", "type": "quantitative" }
      }
    },
    {
      "mark": {
        "type": "point",
        "opacity": 1,
        "filled": false,
        "fill": "white"
      },
      "encoding": {
        "x": { "field": "year", "type": "temporal" },
        "y": { "field": "percent", "type": "quantitative" },

        "tooltip": [
          { "field": "reason", "title": "Reason", "type": "ordinal" },
          {
            "field": "year",
            "title": "Year",
            "type": "temporal",
            "format": "%Y"
          },
          {
            "field": "percent",
            "title": "Percentage of yearly visitors",
            "type": "quantitative",
            "format": ".1%"
          },
          {
            "field": "count",
            "title": "Actual number of visitors",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.maxPercent === datum.percent"
        }
      ],
      "mark": {
        "type": "text",
        "dy": -12,
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "field": "maxPercent",
          "type": "quantitative",
          "format": ".1%"
        }
      }
    }
  ]
}
