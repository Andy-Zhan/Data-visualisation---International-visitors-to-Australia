{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Map" },
  "projection": { "type": "equirectangular" },
  "width": "container",
  "height": "container",

  "data": {
    "url": "world.topojson",
    "format": { "type": "topojson", "feature": "world.geo" }
  },

  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": { "input": "range", "min": 1991, "max": 2020, "step": 1 }
    }
  ],
  "layer": [
    {
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "color": { "value": "#eee" },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "Name" }
        ]
      }
    },
    {
      "data": {
        "url": "centroids.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "lookup": "name",
          "from": {
            "data": {
              "url": "short_term_visitors_output.csv",
              "format": { "type": "csv" }
            },
            "key": "name",
            "fields": ["year", "count"]
          }
        },
        {
          "filter": "year(datum.year) === Year"
        }
      ],

      "mark": { "type": "point", "filled": true },
      "encoding": {
        "longitude": { "field": "long", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": { "field": "count", "type": "quantitative" },
        "opacity": { "value": 0.6 }
      }
    }
  ]
}
